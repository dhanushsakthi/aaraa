{
  "version": 2,
  "builds": [
    {
      "src": "src/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "src/server.js"
    },
    {
      "src": "/((?!api/).*\\..*)",
      "dest": "/frontend/dist/$1"
    },
    {
      "src": "/((?!api/).*)",
      "dest": "/frontend/dist/index.html"
    }
  ]
}